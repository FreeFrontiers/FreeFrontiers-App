{
  "build": {
    "appId": "net.freefrontiers.app",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "LICENSE"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "perMachine": true
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "default"
      ]
    },
    "linux": {
      "category": "Network",
      "target": [
        "tar.gz"
      ]
    },
    "productName": "FreeFrontiers",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/7zip-bin-linux/**/*",
      "**/node_modules/7zip-bin-mac/**/*",
      "**/node_modules/7zip-bin-win/**/*"
    ],
    "copyright": "Copyright Â© 2017 FreeFrontiers",
    "publish": [{
      "provider": "github",
      "owner": "FreeFrontiers",
      "repo": "FreeFrontiers-App"
  }]
  },
  "name": "freefrontiers-app",
  "version": "1.0.1",
  "description": "FreeFrontiers Standalone",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "mac": "electron-builder -m default",
    "windows": "electron-builder -w nsis",
    "linux": "electron-builder -l tar.gz",
    "dist": "electron-builder -mwl"
  },
  "author": {
    "name": "Karar Al-Remahy",
    "email": "alremahykarar@ymail.com"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "localforage": "^1.5.2",
    "markdown-it": "^8.4.0",
    "moment": "^2.19.3",
    "pug": "^2.0.0",
    "snekfetch": "3.2.9",
    "webtorrent": "^0.98.19",
    "electron-updater": "^2.15.0"
  },
  "devDependencies": {
    "electron-debug": "^1.4.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.42.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
